<!DOCTYPE html>
<html class="no-js" lang="zxx">
  <head>
    <meta charset="utf-8" />
    <meta http-equiv="x-ua-compatible" content="ie=edge" />

    <title>Vare APP Blog Section</title>
    <meta name="description" content="" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, shrink-to-fit=no"
    />
    <%- include("partials/icon") %>

    <!-- ************************* CSS Files ************************* -->

    <!-- Vendor CSS -->
    <link rel="stylesheet" href="/assets/css/bootstrap.css" />

    <!-- Vendor CSS -->
    <link rel="stylesheet" href="/assets/css/vendor.css" />

    <!-- style css -->
    <link rel="stylesheet" href="/assets/css/main.css" />
  </head>

  <body>
    <!-- Preloader Start -->
    <div class="zakas-preloader active">
      <div
        class="
          zakas-preloader-inner
          h-100
          d-flex
          align-items-center
          justify-content-center
        "
      >
        <div class="zakas-child zakas-bounce1"></div>
        <div class="zakas-child zakas-bounce2"></div>
        <div class="zakas-child zuka-bounce3"></div>
      </div>
    </div>
    <!-- Preloader End -->

    <!-- Main Wrapper Start -->
    <div class="wrapper">
      <%- include("partials/header2",menu) %>

      <!-- Breadcrumb area Start -->
      <div class="breadcrumb-area bg-color ptb--90" data-bg-color="#f6f6f6">
        <div class="container">
          <div class="row">
            <div class="col-12">
              <div
                class="
                  d-flex
                  justify-content-between
                  align-items-center
                  flex-sm-row flex-column
                "
              >
                <h1 class="page-title">Vare Blog</h1>
              </div>
            </div>
          </div>
        </div>
      </div>
      <!-- Breadcrumb area End -->

      <!-- Main Content Wrapper Start -->
      <div class="main-content-wrapper">
       
        <div class="page-content-inner blog-page-sidebar ptb--80">
          <div class="container">
           
            <div class="row">
              
              <div class="col-12">
                
                <div class="row">
                  <% for(var i=0; i < data.data.length; i++) { %>
                  <div class="col-xl-3 col-lg-4 col-md-6 mb--50">
                    
                    <article class="blog blog-style-2">
                      <div class="blog-media">
                        <figure class="image">
                          <a href="/singlepostimage/<%= data.data[i]._id %>">
                            <img
                              height="300px"rich_text_Editor
                              src="/assets/img/products/fashion-model-dressed-blue-fur-and-black-cap-poses-N9SF6WL.jpg"
                              alt="Blog"
                            />
                          </a>
                        </figure>
                      </div>
                      <div class="blog-info">
                        <h2 class="blog-title">
                          <a href="/singlepostimage/<%= data.data[i]._id %>"><%= data.data[i].title %></a>
                        </h2>
                        <div class="blog-meta"> 
                        
                          <div class="blog-meta--right">
                            <a
                              href="/singlepostimage/<%= data.data[i].ObjectId %>"
                              class="btn btn-no-bg btn-color-dark"
                              >Read More <i class="fa fa-angle-double-right"></i
                            ></a>
                          </div>
                        </div>
                      </div>
                    </article>
                   
                  </div>
                  <% } %>
                  </div>
                  
                </div>
                
              </div>
              <nav class="pagination-wrap">
                <ul class="pagination">
                    <li><a href="javascript:prevPage();" class="prev page-number" id="btn_prev"><i class="fa fa-angle-double-left"></i></a></li>
                    <li><span class="current page-number" id="page">1</span></li>
                    <li><a href="javascript:nextPage();" class="next page-number" id="btn_next"><i class="fa fa-angle-double-right"></i></a></li>
                </ul>
            </nav>
            </div>
          </div>
        </div>
        
      </div>
      <!-- Main Content Wrapper End -->

      <%- include("partials/footer") %>

      <!-- Searchform Popup Start -->
      <div class="searchform__popup" id="searchForm">
        <a href="#" class="btn-close"
          ><i class="flaticon flaticon-cross"></i
        ></a>
        <div class="searchform__body">
          <p>Start typing and press Enter to search</p>
          <form class="searchform">
            <input
              type="text"
              name="popup-search"
              id="popup-search"
              class="searchform__input"
              placeholder="Search Entire Store..."
            />
            <button type="submit" class="searchform__submit">
              <i class="flaticon flaticon-magnifying-glass-icon"></i>
            </button>
          </form>
        </div>
      </div>
      <!-- Searchform Popup End -->

      <!-- Global Overlay Start -->
      <div class="zakas-global-overlay"></div>
      <!-- Global Overlay End -->
    </div>
    <!-- Main Wrapper End -->

    <!-- ************************* JS Files ************************* -->

    <!-- jQuery JS -->
    <script src="/assets/js/vendor.js"></script>

    <!-- Main JS -->
    <script src="/assets/js/main.js"></script>

    <script>
      var current_page = 1;
        var records_per_page = 10;
        // console.log('@{model.limit}',"LIMIT");
        // console.log(records_per_page);
        var objJson = {
            length:
            '<%= data.data.length %>'
        }; // Can be obtained from another source, such as your objJson variable

        function prevPage() {
            if (current_page > 1) {
                current_page--;
                changePage(current_page);
                window.location.href = `?page=${current_page}`;
            }
        }

        function nextPage() {
            console.log("::::::::::", current_page, numPages());
            if (current_page < numPages()) {
                current_page++;
                changePage(current_page);
                window.location.href = `?page=${current_page}`;
            }
        }

        function changePage(page) {
            var btn_next = document.getElementById("btn_next");
            var btn_prev = document.getElementById("btn_prev");
            var page_span = document.getElementById("page");

            // Validate page
            if (page < 1) page = 1;
            if (page > numPages()) page = numPages();


            // for (var i = (page - 1) * records_per_page; i < (page * records_per_page); i++) {
            // 	listing_table.innerHTML += objJson[i].adName + "<br>";
            // }
            page_span.innerHTML = page;

            if (page == 1) {
                btn_prev.style.visibility = "hidden";
            } else {
                btn_prev.style.visibility = "visible";
            }
            // $('#btn_next').html('>');
            // $('#btn_prev').html('<');
            console.log(page, "COMA", numPages(), "KKKKKKK");
            if (page == numPages()) {
                btn_next.style.visibility = "hidden";

            } else {
                btn_next.style.visibility = "visible";
            }
            if (numPages() == 0) {
                $('.paginations').hide();
            } else {
                $('.paginations').show();
            }
        }

        function numPages() {
            console.log(objJson.length, records_per_page);
            return Math.ceil(objJson.length / records_per_page);
        }
                
                
        $(document).ready(function () {
            changePage(current_page);
        });
</script>
  </body>
</html>
