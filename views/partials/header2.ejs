<!-- Header Start -->
<style>
  .round-image {
    width: 56px;
    height: 56px;
    border-radius: 50%;
    overflow: hidden;
   
    display: inline-block;
    vertical-align: middle;
  }
  .mainmenu {
    text-transform: capitalize;
  }
  .header-inner {
    background: #7a2d6d;
    background: -webkit-linear-gradient(to top, #7a2d6d 0%, #570c3a 98%);
    background: -moz-linear-gradient(to top, #7a2d6d 0%, #570c3a 98%);
    background: linear-gradient(to top, #7a2d6d 0%, #570c3a 98%);
    color: #ffffff;
  }
  .flaticon.flaticon-search {
    color: #ffffff;
  }
  @media screen and (max-width: 952px) and (min-width: 755px) {
    .flaticon.flaticon-search {
      position: absolute;
      bottom: -20px;
      color: #ffffff;
      right: -2px;
      font-size: 20px;
    }
    .mobile-menu .mean-bar .meanmenu-reveal span.menu-bar {
      background-color: #ffffff;
    }
    .mobile-menu .mean-bar .meanmenu-reveal span:before,
    .mobile-menu .mean-bar .meanmenu-reveal span:after {
      background-color: #ffffff;
    }
  }
  @media (max-width: 768px) {
    .flaticon.flaticon-search {
      position: absolute;
      bottom: -20px;
      color: #ffffff;
      right: -2px;
      font-size: 20px;
    }
    .mobile-menu .mean-bar .meanmenu-reveal span.menu-bar {
      background-color: #ffffff;
    }
    .mobile-menu .mean-bar .meanmenu-reveal span:before,
    .mobile-menu .mean-bar .meanmenu-reveal span:after {
      background-color: #ffffff;
    }
  }
</style>

<header class="header">
  <div class="header-inner fixed-header">
    <div class="container">
      <div class="row align-items-center">
        <div class="col-xl-10 col-lg-9 col-3">
          <nav class="main-navigation">
            <div class="site-branding">
              <a href="/" class="logo">
                <figure class="logo--normal">
                  <img
                  class="round-image"
                    src="/assets/img/logo/asset4.png"
                    alt="Logo"
                  />
                </figure>
              </a>
            </div>
            <div class="mainmenu-nav d-none d-lg-block">
              <ul class="mainmenu">
                <% for(var i=0; i < menu.length; i++) { %>
                <li class="mainmenu__item menu-item-has-children active">
                  <a
                    href="javascript:void(0)"
                    class="mainmenu__link"
                    style="cursor: default"
                  >
                    <span class="mm-text"><%= menu[i].parentName %></span>
                  </a>
                  <ul class="megamenu two-column">
                    <% for(var j=0; j < menu[i].items.length; j++) { %>
                    <li>
                      <a
                        class="megamenu-title"
                        href="javascript:void(0)"
                        style="cursor: default"
                      >
                        <span class="mm-text" style="cursor: default"
                          ><%= menu[i].items[j].parentNmae %></span
                        >
                      </a>
                      <ul>
                        <% for(var k=0; k < menu[i].items[j].items.length; k++)
                        { %>
                        <li>
                          <a
                            href="/shopnow?pageNo=1&&category=<%= menu[i].items[j].items[k].id %>"
                          >
                            <span class="mm-text"
                              ><%= menu[i].items[j].items[k].name %></span
                            >
                          </a>
                        </li>

                        <% } %>
                      </ul>
                    </li>
                    <% } %>
                  </ul>
                </li>

                <% } %>
                <!-- <li class="mainmenu__item">
                                    <a href="/contact" class="mainmenu__link">
                                        <span class="mm-text">Contact Us</span>
                                    </a>
                                </li> -->
              </ul>
            </div>
          </nav>
        </div>
        <div class="col-xl-2 col-lg-3 col-9 text-end">
          <ul class="header-toolbar">
            <li class="header-toolbar__item">
              <a href="#searchForm" class="header-toolbar__btn toolbar-btn">
                <i class="flaticon flaticon-search"></i>
              </a>
            </li>
            <li class="header-toolbar__item d-lg-none">
              <a href="#" class="header-toolbar__btn menu-btn">
                <i class="fa fa-bars"></i>
              </a>
            </li>
          </ul>
        </div>
      </div>
      <div class="row">
        <div class="col-12">
          <div class="mobile-menu"></div>
        </div>
      </div>
    </div>
  </div>
  <!-- Searchform Popup Start -->
  <div class="searchform__popup" id="searchForm">
    <a href="#" class="btn-close"><i class="flaticon flaticon-cross"></i></a>
    <div class="searchform__body">
      <p>Start typing and press Enter to search</p>
      <input
        type="text"
        name="popup-search"
        id="popup-search"
        class="searchform__input"
        placeholder="Search Entire Store..."
      />
      <button type="button" class="searchform__submit">
        <i class="flaticon flaticon-magnifying-glass-icon"></i>
      </button>
    </div>
  </div>
  <!-- Searchform Popup End -->
</header>
<!-- Header End -->
<!-- jQuery JS -->
<script src="/assets/js/vendor.js"></script>
<script>
  $("#popup-search").keyup(function (event) {
    if (event.keyCode === 13) {
      // console.log("FFFFFFFFFF");

      $(".searchform__submit").click();
    }
  });
  $(".searchform__submit").click(function (event) {
    window.location.href = `/shopnow?pageNo=1&&search=${$(
      "#popup-search"
    ).val()}`;
  });
</script>
